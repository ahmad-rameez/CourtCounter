<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vellelogz.p2_udacity.MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:text="Team A"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/scoreA"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="#000000"
                android:text="0"
                android:textSize="56sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:onClick="threeA"
                android:layout_marginHorizontal="10dp"
                android:text="+3 POINTS"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:onClick="twoA"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="+2 POINTS"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:onClick="freeA"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="FREE THROW"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:text="Team B"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/scoreB"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="#000000"
                android:text="0"
                android:textSize="56sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:onClick="threeB"
                android:layout_weight="1"
                android:text="+3 POINTS"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:onClick="twoB"
                android:layout_marginHorizontal="10dp"
                android:text="+2 POINTS"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:onClick="freeB"
                android:layout_marginHorizontal="10dp"
                android:text="FREE THROW"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="32dp">
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:onClick="resetMe"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
</LinearLayout>
